<h1 class="text-center my-4">Detalhes Produto</h1>

<div class="container" style="max-width: 80%;">
  <button type="submit" class="btn btn-primary mt-3" onclick="/produto">Alterar Produto</button>
  

  <div class="card h-100 bg-light border-primary">
    <div><a href="/produtos/categorias/{{produto.categoria_id}}"><h6>{{produto.categoria_nome}}</h6></a></div>
    <div><h5 class="card-title text-primary">{{produto.nome}}</h5></div>
    <div><h6>{{produto.descricao}}</h6></div>
    <div>{{produto.preco}}</div>
    <div>{{produto.estoque}}</div>
    <a href="/produto/{{produto.id}}/editar" class="btn btn-sm btn-warning me-2"><i class="bi bi-pencil"></i></a>
    <button class="btn btn-danger btn-sm" onclick="confirmarApagar('/produto/{{produto.id}}/remover')"><i class="bi bi-trash"></i></button>
  </div>  
</div>
<div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
  <div id="toastConfirmarDelete" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="toast-header bg-warning text-dark"><i class="bi bi-exclamation-triangle-fill me-2"></i><strong class="me-auto">Confirmação</strong>
    <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Fechar"></button></div>
    <div class="toast-body">
      Tem certeza que deseja apagar este item?
      <div class="mt-2 pt-2 border-top d-flex justify-content-end gap-2">
        <button type="button" class="btn btn-sm btn-secondary" data-bs-dismiss="toast">Cancelar</button>
        <form id="formDelete" method="POST"><button type="submit" class="btn btn-sm btn-danger">Apagar</button>
        </form>
      </div>
    </div>
  </div>
</div>
